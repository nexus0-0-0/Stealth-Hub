-- Stealth Hub for Roblox
-- UI with toggle button and automation features
-- Requires executor (e.g., Synapse X, Fluxus, Ronix, etc)

local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local enabled = false

-- Create GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "StealthHubGUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 220, 0, 100)
Frame.Position = UDim2.new(0, 100, 0, 100)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 2
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Text = "Stealth Hub"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20
Title.Parent = Frame

local Toggle = Instance.new("TextButton")
Toggle.Text = "Enable"
Toggle.Size = UDim2.new(0.9, 0, 0, 30)
Toggle.Position = UDim2.new(0.05, 0, 0, 40)
Toggle.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
Toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
Toggle.Font = Enum.Font.SourceSans
Toggle.TextSize = 18
Toggle.Parent = Frame

Toggle.MouseButton1Click:Connect(function()
    enabled = not enabled
    Toggle.Text = enabled and "Disable" or "Enable"
end)

-- Create toggle icon
local Icon = Instance.new("ImageButton")
Icon.Size = UDim2.new(0, 50, 0, 50)
Icon.Position = UDim2.new(0, 20, 1, -70)
Icon.BackgroundTransparency = 1
Icon.Image = "rbxassetid://INSERT_IMAGE_ID_HERE" -- Replace with image ID of your uploaded icon
Icon.Parent = ScreenGui

Icon.MouseButton1Click:Connect(function()
    Frame.Visible = not Frame.Visible
end)

-- Automation loop
spawn(function()
    while true do
        if enabled then
            -- Add actual RemoteEvents or logic here
            print("Buying bamboo...")
            print("Planting bamboo...")
            print("Harvesting and selling...")
            print("Buying prismatic if available...")
            print("Buying, placing and hatching eggs...")
        end
        wait(5)
    end
end)

print("Stealth Hub loaded.")
